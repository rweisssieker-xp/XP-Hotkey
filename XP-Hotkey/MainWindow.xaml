<Window x:Class="XP_Hotkey.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XP_Hotkey"
        xmlns:vm="clr-namespace:XP_Hotkey.ViewModels"
        xmlns:utils="clr-namespace:XP_Hotkey.Utilities"
        mc:Ignorable="d"
        Title="XP Hotkey - Text Expander" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <utils:CategoriesConverter x:Key="CategoriesConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Margin="5">
            <Button Content="Hinzufügen" Command="{Binding AddSnippetCommand}" Margin="2"/>
            <Button Content="Bearbeiten" Command="{Binding EditSnippetCommand}" Margin="2"/>
            <Button Content="Löschen" Command="{Binding DeleteSnippetCommand}" Margin="2"/>
            <Separator/>
            <Button Content="Duplizieren" Command="{Binding DuplicateSnippetCommand}" Margin="2"/>
            <Button Content="⭐ Favorit" Command="{Binding ToggleFavoriteCommand}" Margin="2"/>
            <Separator/>
            <Button Content="Exportieren" Command="{Binding ExportCommand}" Margin="2"/>
            <Button Content="Importieren" Command="{Binding ImportCommand}" Margin="2"/>
            <Button Content="Aktualisieren" Command="{Binding RefreshCommand}" Margin="2"/>
        </ToolBar>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Snippet List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search -->
                <TextBox Grid.Row="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,5"
                         Padding="5"
                         FontSize="14">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3">
                                            <Grid>
                                                <TextBox Text="{Binding Path=Text, RelativeSource={RelativeSource TemplatedParent}}"
                                                         BorderThickness="0" Padding="5"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Filters -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}"
                              Width="150" Margin="0,0,10,0"/>
                    <CheckBox Content="Nur Favoriten" 
                              IsChecked="{Binding ShowFavoritesOnly}"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Snippet List -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding Snippets}"
                          SelectedItem="{Binding SelectedSnippet}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kürzel" Binding="{Binding Shortcut}" Width="150"/>
                        <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <Setter Property="MaxHeight" Value="50"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Kategorien" Binding="{Binding Categories, Converter={StaticResource CategoriesConverter}}" Width="150"/>
                        <DataGridCheckBoxColumn Header="⭐" Binding="{Binding IsFavorite}" Width="40"/>
                        <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding Enabled}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- Preview Panel -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Vorschau" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" 
                         Text="{Binding PreviewText}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Text="Details" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedSnippet.Shortcut, StringFormat='Kürzel: {0}'}" Margin="0,2"/>
                        <TextBlock Text="{Binding SelectedSnippet.Description, StringFormat='Beschreibung: {0}'}" Margin="0,2"/>
                        <TextBlock Text="{Binding SelectedSnippet.Statistics.UseCount, StringFormat='Verwendungen: {0}'}" Margin="0,2"/>
                        <TextBlock Text="{Binding SelectedSnippet.LastUsed, StringFormat='Zuletzt verwendet: {0:dd.MM.yyyy HH:mm}'}" Margin="0,2"/>
                        <TextBlock Text="{Binding SelectedSnippet.Categories.Count, StringFormat='Kategorien: {0}'}" Margin="0,2"/>
                        <TextBlock Text="{Binding SelectedSnippet.Tags.Count, StringFormat='Tags: {0}'}" Margin="0,2"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock>
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0} Snippets">
                            <Binding Path="Snippets.Count"/>
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
