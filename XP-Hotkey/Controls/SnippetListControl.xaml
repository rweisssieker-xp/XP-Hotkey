<UserControl x:Class="XP_Hotkey.Controls.SnippetListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:XP_Hotkey.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <utils:CategoriesConverter x:Key="CategoriesConverter"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid Name="SnippetsDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Kürzel" Binding="{Binding Shortcut}" Width="150"/>
                <DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="MaxHeight" Value="50"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Kategorien" Binding="{Binding Categories, Converter={StaticResource CategoriesConverter}}" Width="150"/>
                <DataGridCheckBoxColumn Header="⭐" Binding="{Binding IsFavorite}" Width="40"/>
                <DataGridCheckBoxColumn Header="Aktiv" Binding="{Binding Enabled}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

